            <td>{{TID}}</td>
        </tr>
    {{/TID}}

    {{#Reference}}
        <tr>
            <td>Reference</td>
            <td>{{Reference}}</td>
        </tr>
    {{/Reference}}

    {{#Total}}
        <tr>
            <td>Total</td>
            <td>{{Total}}</td>
        </tr>
    {{/Total}}

    {{#TxnType}}
        <tr>
            <td>TxnType</td>
            <td>{{TxnType}}</td>
        </tr>
    {{/TxnType}}

    {{#Footer}}
        <tr>
            <td colspan="2">{{Footer}}</td>
        </tr>
    {{/Footer}}
