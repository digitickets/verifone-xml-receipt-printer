<style type="text/css">
/* Reset */
table.verifone-receipt,
table.verifone-receipt * {
    margin: 0;
    padding: 0;
    border-collapse: collapse;
}

table.verifone-receipt {
    width: 100%;
    font-family: ;
}

table.verifone-receipt td:first-child {
    text-align: left;
}

table.verifone-receipt td:last-child {
    text-align: right;
}

table.verifone-receipt td:first-child:last-child {
    text-align: center;
}
</style>

<table class="verifone-receipt">
    {{#isMerchant}}
        <tr>
            <td colspan="2">*** MERCHANT COPY ***</td>
        </tr>
    {{/isMerchant}}

    {{#isCustomer}}
        <tr>
            <td colspan="2">*** CARDHOLDER COPY ***</td>
        </tr>
    {{/isCustomer}}

    {{#Header}}
        <tr>
            <td colspan="2">{{Header}}</td>
        </tr>
    {{/Header}}

    {{#AID}}
        <tr>
            <td>AID</td>
            <td>{{AID}}</td>
        </tr>
    {{/AID}}

    {{#Amount}}
        <tr>
            <td>Amount</td>
            <td>{{Amount}}</td>
        </tr>
    {{/Amount}}

    {{#AppSeq}}
